{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignore": ["node_modules", ".next", "dist", "convex/_generated"]
	},
	"overrides": [
		{
			"include": ["**/components/ui/**", "**/components/autumn/**"],
			"linter": {
				"rules": {
					"a11y": {
						"useSemanticElements": "off",
						"useFocusableInteractive": "off"
					},
					"suspicious": {
						"noArrayIndexKey": "off"
					},
					"correctness": {
						"useExhaustiveDependencies": "off"
					},
					"security": {
						"noDangerouslySetInnerHtml": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					}
				}
			}
		},
		{
			"include": ["**/app/1/**", "**/app/2/**", "**/app/3/**", "**/app/4/**", "**/app/5/**"],
			"linter": {
				"rules": {
					"a11y": {
						"useValidAnchor": "off"
					},
					"suspicious": {
						"noAssignInExpressions": "off",
						"noArrayIndexKey": "off"
					},
					"correctness": {
						"useExhaustiveDependencies": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					}
				}
			}
		}
	]
}
